<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_book_cover_item_search"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/_q84_tap_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">
        </ImageView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginLeft="100dp"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name_book_item_search"
                android:layout_width="280dp"
                android:layout_height="75dp"
                android:textStyle="bold"
                android:text="1Q84"
                android:textSize="30dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp">
            </TextView>
            <TextView
                android:id="@+id/text_name_author_item_search"
                android:layout_width="280dp"
                android:layout_height="75dp"
                android:text="teen tac gir"
                android:textStyle="normal"
                android:paddingStart="20dp"
                android:textSize="20dp">
            </TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</LinearLayout>