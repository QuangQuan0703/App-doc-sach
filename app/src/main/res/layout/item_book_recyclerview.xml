<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="205dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_book_cardview"
        android:layout_width="127dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_ground_book_recycler"
        app:cardBackgroundColor="@color/gray_200"
        app:cardCornerRadius="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/rate_image_book_recycler"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3.6dp"
                android:background="@color/gray_50"
                android:src="@drawable/rate">
            </ImageView>

            <TextView
                android:id="@+id/rate_text_book_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="2.5dp"
                android:text="5.0"
                android:textSize="10dp"
                android:textStyle="bold">
            </TextView>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/image_book_recycler"
            android:layout_width="100dp"
            android:layout_height="138dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_book">
        </ImageButton>

    </androidx.cardview.widget.CardView>

</RelativeLayout>