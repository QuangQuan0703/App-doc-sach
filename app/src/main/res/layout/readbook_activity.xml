<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.core.widget.NestedScrollView
    android:id="@+id/nested_read_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_back_ground_readbook"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:background="@drawable/pxfuel"
            android:paddingTop="60dp"
            android:paddingBottom="60dp"
            android:src="@drawable/_q84_tap_2"></ImageView>
        <TextView
            android:id="@+id/name_book_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1Q84"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/gren_900"
            android:layout_marginLeft="20dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/avatar_1"
                android:elevation="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teen tac gia "
                android:textStyle="bold"
                android:textColor="@color/gray_600"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="45dp"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="24dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3.6dp"
                    android:background="@color/gray_50"
                    android:src="@drawable/rate">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="2.5dp"
                    android:text="5.0"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So luowng view dax xem "
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tricsh doanj"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/gray_900"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mo_loi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/gray_700">
        </TextView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttom_readbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Read"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/grenn_400"
        android:backgroundTint="@color/gray_900">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</LinearLayout>
