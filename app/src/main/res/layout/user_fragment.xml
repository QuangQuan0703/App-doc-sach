<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_fragment"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user_icon"
        app:civ_border_color="@color/gray_600"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_user"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/image_user_fragment"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"/>
    <Button
        android:id="@+id/button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi ảnh đại diện"
        android:layout_below="@id/change_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray_900"
        android:elevation="10dp"
        android:textSize="18dp"
        android:background="@drawable/back_ground_book_recycler"
        android:layout_marginTop="40dp">
    </Button>

    <Button
        android:id="@+id/change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_ground_book_recycler"
        android:elevation="8dp"
        android:text="Đổi tên"
        android:textColor="@color/gray_900"
        android:textSize="18dp"
        android:layout_marginTop="40dp">
    </Button>
    <Button
        android:id="@+id/button_exit"
        android:layout_below="@id/button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textSize="18dp"
        android:background="@drawable/back_ground_book_recycler"
        android:textColor="@color/gray_900"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>


</RelativeLayout>